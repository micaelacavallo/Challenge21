<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.micaelacavallo.sandwichshop" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SandwichSelectionActivity"
            android:label="@string/title_activity_sandwich_count_selection" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrderConfirmationActivity"
            android:label="@string/title_activity_order_confirmation" >
        </activity>
        <activity
            android:name=".OrderFormActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
